<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInicial.Views.DetalhePage"
             Title="{Binding Pessoa.Nome}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label
                HorizontalOptions="Center"
                FontSize="Medium"
                Text="Nome da pessoa selecionada:"/>
            <Label
                HorizontalOptions="Center"
                FontSize="Large"
                Text="{Binding Pessoa.Nome}"/>
            <Label
                HorizontalOptions="Center"
                FontSize="Medium"
                Text="CPF da pessoa selecionada:"/>
            <Label
                HorizontalOptions="Center"
                FontSize="Large"
                Text="{Binding Pessoa.CPF}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>